def save_joke():
    joke = result_text.get() # joke variable stored whatever jokes generated by the upper function
    if joke.strip() == "": # while this line activate when user try click directly to save jokes option without even generating one!
        result_text.set("No Joke to save! Please At least generate one!")
        return

    with open("Saved_jokes.txt","a", encoding="UTF-8") as file: # this line append new every joke into this text file
        file.write(joke + "\n\n") # this line write joke in the editor and make one line space then write another one!
    result_text.set("Your Joke is Saved!")
